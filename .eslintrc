{
    "env": {
        "node": true,
        "es6": true,
        "jasmine": true,
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "rules": {
        "space-before-function-paren": ["error", "never"],
        "comma-spacing": [2, {"before": false, "after": true}], // 2 means error
        "key-spacing": ["error", { "beforeColon": false, "afterColon": true }],
        "no-console": "off",
        "no-constant-condition": "off",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
